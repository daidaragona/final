@model BussinesEntities.UsuarioEntity
@{
    ViewBag.Title = "";
}

<script type="text/javascript">

    var perfil = @ViewBag.Perfil

    $(document).ready(function () {
        if (perfil == 4) {
            $("#ddlPerfiles").show();
            $("#lblPerfil").show();
        }
    });

</script>


<!-- LIGHT SECTION -->
<section class="lightSection clearfix pageHeader">
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                <div class="page-title">
                    <h2>REGISTRATE</h2>
                </div>
            </div>
            <div class="col-xs-6">
                <ol class="breadcrumb pull-right">
                    <li>
                        <a href="portada.htm">INICIO</a>
                    </li>
                    <li class="active">REGISTRATE</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="mainContent clearfix stepsWrapper">
    <div class="container">



        <div class="row">

            <div class="innerWrapper clearfix stepsPage">


                <div class="col-xs-12 col-sm-3">




                </div>
                <div class="col-xs-12 col-sm-6">

                    <br /><br />
                    <div class="page-header">
                        <h4>REGISTRATE</h4>
                    </div>

                    @ViewBag.Error

                    <br />
                    @using (Html.BeginForm(new { @class = "form-register" }))
                    {

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group col-sm-12 col-xs-12">
                            @Html.TextBoxFor(model => model.nombreUsuario, new { id = "form-field-1", @class = "form-control", placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.nombreUsuario)
                        </div>
                        <div class="form-group col-sm-12 col-xs-12">
                            @Html.PasswordFor(model => model.password, new { @class = "form-control", name = "password", placeholder = "Contraseña" })
                            @Html.ValidationMessageFor(model => model.password)
                        </div>

                        <div class="form-group col-sm-12 col-xs-12">
                            @Html.PasswordFor(model => model.confirmarPassword, new { @class = "form-control", name = "password_again", placeholder = "Repita su Contraseña" })
                            @Html.ValidationMessageFor(model => model.confirmarPassword)
                        </div>

                        <div class="form-group col-sm-12 col-xs-12">
                            @Html.DropDownListFor(model => model.idPerfil, (SelectList)ViewBag.Perfiles, "-- SELECCIONA EL PERFIL --", new { id = "ddlPerfiles", style = "display:none; width:300px; height:35px;" })
                            @Html.ValidationMessageFor(model => model.idPerfil)
                        </div>

                        <div class="col-xs-12">
                            <div class="well well-lg clearfix">
                                <button class="btn btn-primary btn-block" type="submit">REGISTRAR</button>
                            </div>
                        </div>

                    }

                </div>

                <div class="col-xs-12 col-sm-3">




                </div>
            </div>

        </div>
    </div>
</section>

@using Microsoft.AspNet.Identity
@{BussinesEntities.UsuarioEntity us = (BussinesEntities.UsuarioEntity) Session["User"];
    if (us.idUsuario != 0)
    {
    
    using (Html.BeginForm("LogOff", "Usuarios", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <span><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar Sesión</a> <small>| @Html.ActionLink("Hola " + us.nombreUsuario + "!", "PanelControlUsuario", "Usuarios", routeValues: null, htmlAttributes: new { title = "Manage" })</small></span>

    }
}
else
{
        
        
    <span>@Html.ActionLink("Log in", "Login", "Usuarios", routeValues: null, htmlAttributes: new { id = "loginLink" })<small>o</small>@Html.ActionLink("Registrate!", "Nuevo", "Usuarios", routeValues: null, htmlAttributes: new { id = "registerLink" })</span>


}
}

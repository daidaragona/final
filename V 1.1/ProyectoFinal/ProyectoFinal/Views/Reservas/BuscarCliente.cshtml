@model IEnumerable<BussinesEntities.ClientesEntity>


@if (Model != null)
{


    if (Model.Count() > 0)
    {

    <table class="table">

        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Sexo</th>
            <th>Documento</th>
            <th></th>
        </tr>


        @{
            
            foreach (var item in Model)
            {

                <tr>
                    <td>@item.apellido</td>
                    <td>@item.nombre</td>
                    <td>@item.Sexo</td>
                    <td>@item.documento</td>
                    <td><a href="#" onclick="return seleccionarCliente('@item.idPersona', '@item.nombre', '@item.apellido', '@item.Sexo', '@item.documento');"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Seleccionar</a></td>
                </tr>

            }

        }

    </table>


    }else{
    
        <div style="color:gray; text-align:center">Sin datos para mostrar si no encuentra el cliente lo puede dar de alta desde el boton Nuevo Cliente.</div>
    }

}


